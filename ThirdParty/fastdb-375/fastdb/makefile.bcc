cleanobj:
	del *.odb,*.obj,*.pch,*.pdb,*.ilk,*.dsp,*.dsw,*.ncb,*.opt

cleandbs:
	del *.fdb

clean: cleanobj cleandbs
	del *~,*.lib,*.exe


zip: clean
	cd ..
	del fastdb.zip
	zip -r fastdb.zip fastdb

copyzip: zip
	copy fastdb.zip a:

